<Window x:Class="WpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FFA2A2A2">
        <Grid Background="#FFEEEEEE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Canvas x:Name="DrawSurface" Margin="10" Background="White" Grid.Column="1"/>
            <Button x:Name="ButtonDrawFlatGrid" Content="Flat Grid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="238" Click="ButtonDrawFlatGrid_Click" Background="#FFC9C9C9"/>
            <Button x:Name="ButtonDrawPointyGrid" Content="Pointy Grid" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="238" Click="ButtonDrawPointyGrid_Click" Background="#FFC9C9C9"/>
        </Grid>
    </Grid>
</Window>
